<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 메테리얼테마 -->
    <style name="MaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- ... -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- ?attr/back -->
        <item name="colorControlHighlight">@color/colorPrimary</item>
    </style>

    <style name="MyRadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="colorControlNormal">@color/colorLightGray</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorLightPink</item>
    </style>

    <style name="MySwitchButton" parent="">
        <item name="colorSwitchThumbNormal">@color/colorLightGray</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:colorForeground">@color/colorLightGray</item>

    </style>

</resources>
